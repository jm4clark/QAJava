	public static boolean check(int a, int b, int c) {
		ArrayList<Integer> nums = new ArrayList<Integer>();
		nums.addAll(Arrays.asList(a,b,c));
		return nums.stream().filter(i->i>=13 && i <= 19).count() >= 2;
	}
